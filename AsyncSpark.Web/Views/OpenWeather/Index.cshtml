@model List<OpenWeatherMapClient.Models.CurrentWeather>
@{
    ViewData["Title"] = "Open Weather";
}

<div class="row justify-content-center mb-5">
    <div class="col-lg-10">
        <div class="text-center mb-5">
            <h1 class="display-4 fw-bold mb-3 text-primary">
                <i class="bi bi-cloud-sun me-2"></i>Weather API Demo
            </h1>
            <p class="lead">
                Explore asynchronous weather data fetching from OpenWeatherMap API
            </p>
        </div>
    </div>
</div>

<div class="row g-4 justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow-sm p-4 mb-5">
            <div class="row">
                <div class="col-lg-8 col-md-12 mx-auto">
                    <form method="get" class="mb-0">
                        <div class="mb-3">
                            <h3 class="mb-0 d-flex align-items-center">
                                <i class="bi bi-search me-2 text-primary"></i>
                                <span>Search Weather</span>
                            </h3>
                            <p class="text-muted mt-2">
                                Enter a city name to fetch current weather data asynchronously
                            </p>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-transparent">
                                    <i class="bi bi-geo-alt"></i>
                                </span>
                                <input id="weatherCity" name="location" class="form-control" type="text"
                                    placeholder="Enter city name (e.g., London, New York, Tokyo)" />
                                <button type="submit" id="getWeather" class="btn btn-primary">
                                    <i class="bi bi-cloud-download me-2"></i>Get Weather
                                </button>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 justify-content-center">
    @foreach (var item in @Model)
    {
        <div class="col-xxl-4 col-xl-4 col-lg-6 col-md-6 col-sm-12">
            <div class="card shadow-sm h-100 transition">
                @if (@item.Success)
                {
                    <div class="p-4 bg-primary text-white rounded-top">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h3 class="text-white m-0">@item.Location?.Name</h3>
                            <span class="badge bg-light text-dark">@item.CurrentConditions?.Conditions</span>
                        </div>
                        <div class="d-flex align-items-center text-white">
                            <div class="me-auto">
                                <h1 class="display-4 mb-0 fw-bold">@item.CurrentConditions?.Temperature.ToString("#0.0")°</h1>
                                <p class="mb-0">Feels like @((item.CurrentConditions?.Temperature ?? 0) - 2)°</p>
                            </div>
                            <div>
                                @if (item.CurrentConditions?.Conditions?.Contains("Rain") == true)
                                {
                                    <i class="bi bi-cloud-rain-heavy fs-1"></i>
                                }
                                else if (item.CurrentConditions?.Conditions?.Contains("Cloud") == true)
                                {
                                    <i class="bi bi-cloud fs-1"></i>
                                }
                                else if (item.CurrentConditions?.Conditions?.Contains("Clear") == true)
                                {
                                    <i class="bi bi-sun fs-1"></i>
                                }
                                else if (item.CurrentConditions?.Conditions?.Contains("Snow") == true)
                                {
                                    <i class="bi bi-snow fs-1"></i>
                                }
                                else if (item.CurrentConditions?.Conditions?.Contains("Mist") == true ||
                                item.CurrentConditions?.Conditions?.Contains("Fog") == true)
                                {
                                    <i class="bi bi-cloud-fog fs-1"></i>
                                }
                                else if (item.CurrentConditions?.Conditions?.Contains("Thunderstorm") == true)
                                {
                                    <i class="bi bi-lightning fs-1"></i>
                                }
                                else
                                {
                                    <i class="bi bi-cloud-sun fs-1"></i>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="ratio ratio-16x9 m-0">
                        <iframe loading="lazy" class="border-0 rounded-0"
                            src="https://www.bing.com/maps/embed?h=280&w=625&cp=@(item.Location?.Latitude ?? 0)~@(item.Location?.Longitude ?? 0)&lvl=11&typ=d&sty=r&src=SHELL&FORM=MBEDV8"
                            scrolling="no">
                        </iframe>
                    </div>

                    <div class="p-4">
                        <p class="text-muted mb-3">Observed at @item.ObservationTime</p>

                        <div class="d-flex align-items-center py-2 border-bottom">
                            <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-2 me-3 d-flex align-items-center justify-content-center">
                                <i class="bi bi-eye"></i>
                            </div>
                            <div class="d-flex justify-content-between flex-grow-1">
                                <span>Visibility</span>
                                <span class="fw-bold">@(item.CurrentConditions?.Visibility.ToString("#0.00") ?? "0.00") miles</span>
                            </div>
                        </div>

                        <div class="d-flex align-items-center py-2 border-bottom">
                            <div class="bg-info bg-opacity-10 text-info rounded-circle p-2 me-3 d-flex align-items-center justify-content-center">
                                <i class="bi bi-cloud"></i>
                            </div>
                            <div class="d-flex justify-content-between flex-grow-1">
                                <span>Cloud Cover</span>
                                <span class="fw-bold">@(item.CurrentConditions?.CloudCover ?? 0)%</span>
                            </div>
                        </div>

                        <div class="d-flex align-items-center py-2 border-bottom">
                            <div class="bg-success bg-opacity-10 text-success rounded-circle p-2 me-3 d-flex align-items-center justify-content-center">
                                <i class="bi bi-droplet"></i>
                            </div>
                            <div class="d-flex justify-content-between flex-grow-1">
                                <span>Humidity</span>
                                <span class="fw-bold">@((item.CurrentConditions?.Humidity ?? 0).ToString("#0.0"))%</span>
                            </div>
                        </div>

                        <div class="d-flex align-items-center py-2 border-bottom">
                            <div class="bg-warning bg-opacity-10 text-warning rounded-circle p-2 me-3 d-flex align-items-center justify-content-center">
                                <i class="bi bi-speedometer2"></i>
                            </div>
                            <div class="d-flex justify-content-between flex-grow-1">
                                <span>Pressure</span>
                                <span class="fw-bold">@((item.CurrentConditions?.Pressure ?? 0).ToString("#0.00")) in/Hg</span>
                            </div>
                        </div>

                        <div class="d-flex align-items-center py-2 border-bottom">
                            <div class="bg-danger bg-opacity-10 text-danger rounded-circle p-2 me-3 d-flex align-items-center justify-content-center">
                                <i class="bi bi-wind"></i>
                            </div>
                            <div class="d-flex justify-content-between flex-grow-1">
                                <span>Wind</span>
                                <span class="fw-bold">@(item.CurrentConditions?.WindDirection?.Abbreviation ?? "N/A")
                                    @(item.CurrentConditions?.WindSpeed.ToString("#0.0") ?? "0.0") mph</span>
                            </div>
                        </div>

                        <div class="d-flex align-items-center py-2 border-bottom">
                            <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-2 me-3 d-flex align-items-center justify-content-center">
                                <i class="bi bi-umbrella"></i>
                            </div>
                            <div class="d-flex justify-content-between flex-grow-1">
                                <span>Rainfall (1 hour)</span>
                                <span class="fw-bold">@((item.CurrentConditions?.RainfallOneHour ?? 0).ToString("#0.00")) in</span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <small class="text-muted">
                                <i class="bi bi-clock me-1"></i>Fetched: @item.FetchTime
                            </small>
                            <small class="fw-bold">
                                <i class="bi bi-hourglass-split me-1"></i>Age: @item.ObservationAge
                            </small>
                        </div>
                    </div>
                }
                else
                {
                    <div class="p-4 bg-danger text-white rounded-top">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-exclamation-triangle-fill fs-1 me-3"></i>
                            <div>
                                <h3 class="mb-0">Error</h3>
                                <p class="mb-0">Could not fetch weather data</p>
                            </div>
                        </div>
                    </div>
                    <div class="p-4">
                        <p class="mb-0">@item.ErrorMessage</p>
                    </div>
                }
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="row justify-content-center mt-5">
        <div class="col-lg-10 text-center">
            <div class="card shadow-sm p-5">
                <i class="bi bi-cloud-moon fs-1 text-primary mb-3"></i>
                <h3>Search for a city to see weather data</h3>
                <p class="text-muted">Enter a city name in the search box above to fetch current weather conditions</p>
            </div>
        </div>
    </div>
}



